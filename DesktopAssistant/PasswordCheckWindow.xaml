<Window x:Class="DesktopAssistant.PasswordCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAssistant"
        mc:Ignorable="d"
        Title="Password check" Height="215" Width="298" ResizeMode="NoResize" WindowStyle="None" >
    <Grid>
        <TextBox x:Name="textbox_Password" HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button_submitPassword" Content="submit" HorizontalAlignment="Left" Margin="121,116,0,0" VerticalAlignment="Top" Click="button_submitPassword_Click" IsDefault="True"/>
    </Grid>
</Window>
